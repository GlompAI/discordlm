{
    "compilerOptions": {
        "lib": [
            "deno.ns",
            "deno.window",
            "deno.unstable"
        ],
        "strict": true
    },
    "lint": {
        "include": [
            "src/"
        ],
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": [
            "src/"
        ]
    },
    "lock": false,
    "nodeModulesDir": "auto",
    "test": {
        "include": [
            "src/"
        ]
    },
    "tasks": {
        "start": "deno run --unstable-kv --allow-net --allow-env --allow-read --allow-write src/main.ts",
        "dev": "deno run --unstable-kv --allow-net --allow-env --allow-read --allow-write --watch src/main.ts",
        "prepare": "deno compile --unstable-kv --allow-net --allow-env --allow-read --allow-write --output dist/discordlm src/main.ts",
        "check": "deno check --unstable-kv src/main.ts",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "fmt:check": "deno fmt --check"
    },
    "imports": {
        "discord.js": "npm:discord.js@^14.15.3",
        "fflate": "npm:fflate",
        "@google/generative-ai": "npm:@google/generative-ai@^0.21.0",
        "omggif": "npm:omggif",
        "pngjs": "npm:pngjs",
        "adze": "npm:adze",
        "openai": "npm:openai@^4.52.7",
        "llama-tokenizer-js": "npm:llama-tokenizer-js"
    },
    "exclude": [
        "dist/",
        "node_modules/"
    ]
}
